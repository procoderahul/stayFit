<body>


    {{>admin_nav}}

<center><h2>User messages</h2>
<p>Various messages sent by the users: </p>
</center>

<table class="table mx-auto">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email id</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Message</th>
      <th scope="col">Action</th> <!-- Add a column for the delete action -->
    </tr>
  </thead>
   <tbody>
 {{#each data}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.surname}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.message}}</td>
        <td>
          <form method="POST" action="/deletemes/{{this._id}}">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
   </tbody>
     </table>

